

.row {
  height: 100px;
  border-bottom: 1px solid grey;
  padding: 10px;
  display: flex;
  align-items: center;
  cursor pointer
}

.innInput {
  margin: 5px;
  width: 200px;
  margin-top: 20px;
  height: 30px;
  padding: 5px;
}

.searchBtn {
  margin: 5px;
  margin-top: 20px;
  simpleBlueBtn(150px, 32px, 16px)
  cursor pointer
}

.searchPanel {
  margin: 20px
  height 80px
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

/* ODL */

a {
  text-decoration: none;
}

.tendersListWrapper {
  display: flex;
  flex-direction: column;
  margin: auto;
  padding: 38px 0;
}

.tendersListTop {
  display: flex;
  justify-content: left;
  align-items: center;
  padding-bottom: 28px;
}

.activeTendersTitle {
  padding-left: 0;
  padding-right: 18px;
  font-family: Arial;
  font-size: 36px;
}

.activeTendersAmount {
  opacity: 0.3;
  font-family: Arial;
  font-size: 18px;
  top: 6px;
  left: 9px;
  position: relative;
}

.addTenderLink {
  margin-left: auto;
}

.addTenderBtn {
  width: 169px;
  height: 40px;
  border-radius: 4px;
  background-color: $blue;
  outline: 0;
  color: white;
  font-family: Arial;
  font-size: 16px;
  border: 0;
  cursor: pointer;
  display: inline-block;
  vertical-align: baseline;
}

.tendersListFilters {
  margin: 0 7.5px;
}

.tendersListFiltersForm {
  display: flex;
  margin: 0 -7.5px;

  & > div {
    margin-bottom: 25px;
    padding: 0 7.5px;
    flex-basis: 0;
    flex-grow: 1;
    max-width: 100%;
  }
}

.select {
  width: 100%;
}

.searchWrapper {
  position: relative;
  height: 32px;
  border: solid 1px #e5e5e5;
  flex-grow: 2.2 !important;
}

.glassIcon {
  color: #999999;
  position: absolute;
  top: 50%;
  left: 7px;
  transform: translateY(-50%);
}

.searchInput {
  height: 30px;
  background-color: $white;
  border: 0;
  padding: 0;
  margin-bottom: 1px;
  font-family: Arial;
  font-size: 14px;
  color: black;
  width: 100%;
  padding-left: 20px;
}

::placeholder {
  word-break: break-all;
}

.search::-webkit-input-placeholder, .search::-moz-placeholder, .search:-ms-input-placeholder {
  color: rgba(0, 0, 0, 0.2);
}

.selectWrapper {
  position: relative;
  cursor: pointer;
}

.selectWrapper::before {
  position: absolute;
  content: '';
  width: 0;
  height: 0;
  border-top: 5px solid #000;
  border-right: 5px solid transparent;
  border-bottom: 15px solid transparent;
  border-left: 5px solid transparent;
  top: 40%;
  right: 15px;
}

.select {
  -webkit-appearance: none;
  -moz-appearance: none;
  border-radius: 0;
  padding: 0 8px;
  height: 32px;
  margin: 0 9px;
  cursor: pointer;
  background-color: #fff;
  border: solid 1px #e5e5e5;
  normalArialFont(14px);
}

.finalSelect {
  margin-right: 0;
}

.tableWrapper {
  border-collapse: collapse;
  display: flex;
  flex-direction: column;
}

.tableRow:first-child {
  text-align: left;
}

.tableRow:not(:first-child):hover {
  background-color: rgba(0, 0, 0, 0.02);
  cursor: pointer;
}

.tableRow {
  width: 100%;
  padding: 10px 0;
  display: flex;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.tableColumn {
  padding: 5px 15px;
  min-width: 80px;
  normalArialFont(14px);
}

.tableColumn_tenderNumber, .tableColumn_tenderName, .tableColumn_tenderCustomer {
  @extend .tableColumn;
}

.tenderNumber {
  margin-top: 0;
  line-height: 20px;
  font-family: Arial;
  font-size: size;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
}

.smallText {
  opacity: 0.5;
  margin: 0;
  normalArialFont(12px);
}

.tenderTitle {
  margin-top: 0;
  font-family: Arial;
  font-size: 14px;
  font-weight: bold;
  text-align: left;
  overflow: hidden;
  max-height: 60px;
  line-height: 20px;
  color: $blue;
}

.tenderType, .tableRow:first-child {
  @extend .smallText;
}

.tableColumn_tenderStartingPrice, .tableColumn_tenderStatus {
  @extend .tableColumn;
  min-width: 135px;
}

.tableColumn_tenderRequisition, .tableColumn_tenderStartingPrice {
  @extend .tableColumn;
  text-align: right;
}

.tableColumn_tenderNumber {
  width: 16%;
}

.tableColumn_tenderStartingPrice, .tableColumn_tenderStatus {
  width: 10%;
  white-space: nowrap;
}

.tableColumn_tenderStatus {
  width: 200px;
}

.tableColumn_tenderRequisition {
  width: 4%;
}

.tableColumn_tenderName, .tableColumn_tenderCustomer {
  width: 30%;
}

.tableColumn_tenderName {
  position: relative;
}

.tenderNameTooltip {
  position: absolute;
  top: 60%;
  left: 50px;
  display: none;
  min-width: 250px;
  padding: 10px 20px;
  border-radius: 7px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 16px 34px 0 rgba(0, 0, 0, 0.1);
  background: #fff;
  z-index: 1;
  transition: opacity 1s;
  opacity: 0;
  height: 0;
}

.tableColumn_tenderName:hover .tenderNameTooltip {
  opacity: 1;
  height: auto;
  display: block;
  transition-delay: 600ms;
  transition-property: opacity;
  animation-duration: 0.6s;
  animation-name: opacityShow;
}

.smallText {
  opacity: 0.5;
  margin-top: 14px;
  normalArialFont(12px);
}

.numberColumn {
  text-align: right;
  white-space: nowrap;
}

.statusColumn .smallText {
  margin-top: 0;
}

.tenderListTable {
  width: 100%;
  td {
    vertical-align: top;

    & > a {
      color: inherit;
      text-decoration: none;
    }
  }
}

.tenderName {
  margin-top: 0;
  font-family: Arial;
  font-size: 14px;
  font-weight: bold;
  text-align: left;
  overflow: hidden;
  max-height: 60px;
  line-height: 20px;
  color: $blue;
}

@keyframes opacityShow {
  from {
    opacity: 0;
    height: 0;
  }

  70% {
    opacity: 0;
    height: 0;
  }

  100% {
    opacity: 1;
    height: auto;
  }

  to {
    opacity: 1;
    height: auto;
  }
}

@media (max-width: 1200px) {
  .tendersListFiltersForm {
    flex-wrap: wrap;

    & > div {
      margin-bottom: 20px;
    }
  }

  .select {
    margin: 0;
  }
}

@media screen and (max-width: 1024px) and (max-height: 768px) {
  .tendersListWrapper {
    padding: 30px;
  }
}
