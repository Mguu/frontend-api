.header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    width 100%
    height 120px
}

.titleWrapper {
    position: relative;
    margin-left: 80px;
}

.text {
    margin-left: 80px;
}

.pTitle {
    normalArialFont(14px)
    opacity: 0.5;
    color: black;
}

.pText {
    normalArialFont(16px)
    color: black;
}

.backLink {
    position: absolute;
    left: -30px;
    top: 50%;
    transform: translateY(-50%);

    &::before {
        content: '';
        display: block;
        background: url('assets/icons/leftArrow.png') no-repeat 0 0;
        width: 22px;
        height: 18px;
        background-size: contain;
    }
}
